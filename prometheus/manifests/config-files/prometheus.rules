groups:
- name: devopscube demo alert
  rules:
  - alert: High Pod Memory
    expr: sum(container_memory_usage_bytes) > 1
    for: 1m
    labels:
      severity: slack
    annotations:
      summary: High Memory Usage

- name: nodeJsApp
  rules:
  - record: job:up
    expr: up{job="NodeJsApp"}
  - alert: nodeJsApp
    expr: job:up == 0
