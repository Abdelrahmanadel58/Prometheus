groups:
- name: devopscube demo alert
  rules:
  - alert: High Pod Memory
    expr: sum(container_memory_usage_bytes) > 1
    for: 1m
    labels:
      severity: slack
    annotations:
      summary: High Memory Usage

- name: master-1
  rules:
  - record: job:up
    expr: up{instance="master-1"}
  - alert: master-1
    expr: up{instance="master-1"}
    for: 1m
